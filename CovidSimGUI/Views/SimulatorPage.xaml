<Page
    x:Class="CovidSimGUI.Views.SimulatorPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:CovidSimGUI.Properties"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:views="clr-namespace:CovidSimGUI.Views"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance views:SimulatorPage}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.SimulatorPageTitle}" />
        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            Background="{DynamicResource MahApps.Brushes.Gray10}">
            <!--
            The Mahapps Gray10 color represents where you should place your content.
            Place your content here.
            -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="button" Content="Start" Click="Bt_start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <ProgressBar Grid.Column="2" Height="6" Margin="10,382,10,0" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox" Grid.Column="2" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="191"/>
            <lvc:CartesianChart Grid.Column="2" Series="{Binding SeriesCollection}" Margin="10,206,10,25" />
            <Button x:Name="button1" Click="bt_testClick" Content="Test" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top"/>

            <ScrollViewer Grid.Column="1" Margin="10,10,7,10" RenderTransformOrigin="0.5,0.5">
                <StackPanel>
                    <Label Content="Citizen count" Margin="10,10,10,0" Height="30" VerticalAlignment="Top"/>
                    <mah:NumericUpDown Value="{Binding CitizenCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </ScrollViewer>
            <Label x:Name="label" Content="Day count:" Margin="10,74,10,0" VerticalAlignment="Top"/>
            <mah:NumericUpDown Value="{Binding DayCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,100,10,0" VerticalAlignment="Top"/>
            <!-- <Label Grid.Column="1" Content="Citizen count" Margin="10,10,10,0" Height="30" VerticalAlignment="Top"/> -->
            <!-- <mah:NumericUpDown Grid.Column="1" Margin="10,40,10,0" Value="{Binding CitizenCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top"/> -->
        </Grid>
    </Grid>
</Page>
